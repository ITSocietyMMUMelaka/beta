	"blockquote": {
		"prefix": "bq",
		"body": [
			"{{< blockquote cite=\"${1:!cite}\" ${2:citelink=\"${3:#link}\" }>}}",
			"${4:!content}",
			"{{< /blockquote >}}$0"
		]
	},
	"hack.css alert": {
		"prefix": "alert",
		"body": "{{< hackcss-alert type=\"${1|success,info,warning,error|}\" text=\"${2:!text}\" />}}$0",
		"description": "alert component from hack.css"
	},
	"hack.css alert multiline": {
		"prefix": "alertm",
		"body": [
			"{{< hackcss-alert type=\"${1|success,info,warning,error|}\" >}}",
			"${2:!content}",
			"{{< /hackcss-alert >}}$0"
		],
		"description": "alert component from hack.css"
	},
	"hack.css alert multiline with markdown": {
		"prefix": "alertmd",
		"body": [
			"{{% hackcss-alert type=\"${1|success,info,warning,error|}\" %}}",
			"${2:!content}",
			"{{% /hackcss-alert %}}$0"
		],
		"description": "alert component from hack.css"
	},
	"hack.css button": {
		"prefix": "button",
		"body": "{{< hackcss-button text=\"${1:!text}\" type=\"${2|default,primary,success,info,warning,error|}\" ${3:isghost=\"${4:true}\" }${5:isblock=\"${6:true}\" }/>}}$0",
		"description": "button component from hack.css"
	},
	"hack.css button multiline": {
		"prefix": "buttonm",
		"body": [
			"{{< hackcss-button type=\"${1|default,primary,success,info,warning,error|}\" ${2:isghost=\"${3:true}\" }${4:isblock=\"${5:true}\" }>}}",
			"${6:!content}",
			"{{< /hackcss-button >}}$0"
		],
		"description": "button component from hack.css"
	},
	"hack.css button multiline with markdown": {
		"prefix": "buttonmd",
		"body": [
			"{{% hackcss-button type=\"${1|default,primary,success,info,warning,error|}\" ${2:isghost=\"${3:true}\" }${4:isblock=\"${5:true}\" }%}}",
			"${6:!content}",
			"{{% /hackcss-button %}}$0"
		],
		"description": "button component from hack.css"
	},
	"hack.css button group": {
		"prefix": "buttongroup",
		"body": [
			"{{< hackcss-buttongroup >}}",
			"\t${1:!buttons}",
			"{{< /hackcss-buttongroup >}}$0"
		],
		"description": "button group component from hack.css"
	},
	"hack.css card": {
		"prefix": "card",
		"body": "{{< hackcss-card header=\"${1:!title}\" text=\"${2:!text}\" />}}$0",
		"description": "card component from hack.css"
	},
	"hack.css card multiline": {
		"prefix": "cardm",
		"body": [
			"{{< hackcss-card header=\"${1:!title}\" >}}",
			"${2:!content}",
			"{{< /hackcss-card >}}"
		],
		"description": "card component from hack.css"
	},
	"hack.css card multiline with markdown": {
		"prefix": "cardmd",
		"body": [
			"{{% hackcss-card header=\"${1:!title}\" %}}",
			"${2:!content}",
			"{{% /hackcss-card %}}"
		],
		"description": "card component from hack.css"
	},
	"hack.css progress bar": {
		"prefix": "progressbar",
		"body": "{{< hackcss-progress value=\"${1:50}\" ${2:showprecent=\"${3:true}\" }${4:filltext=\"${5:Loading}\" }>}}$0",
		"description": "progress bar component from hack.css"
	},
	"hack.css loading component": {
		"prefix": "loading",
		"body": "{{< hackcss-throbber >}}$0",
		"description": "default loading component from hack.css"
	}, 
	// PhotoSwipe 
	"load photoswipe": {
		"prefix": "lp",
		"body": "{{< load-photoswipe >}}$0",
		"description": "load photoswipe"
	},
	"photoswipe figure with basic options": {
		"prefix": "fg",
		"body": "{{< figure link=\"${1:!hi-res image}\" caption=\"${2:!caption}\" ${3:caption-position=\"${4:bottom}\" }${5:caption-effect=\"${6:slide}\" }>}}$0",
		"description": "figure that support photoswipe"
	},
	"photoswipe figure with all options": {
		"prefix": "fga",
		"body": "{{< figure link=\"${1:!hi-res image}\" caption=\"${2:!caption}\" ${3:caption-position=\"${4|bottom,center,none|}\" }${5:caption-effect=\"${6|slide,fade,none|}\" }${7:src=\"${8:thumbnail}\" }${9:class=\"no-photoswipe\" }>}}$0",
		"description": "figure that support photoswipe"
	},
	"photoswipe gallery": {
		"prefix": "g",
		"body": [
			"{{< gallery >}}",
			"\t${1:!figures}",
			"{{< /gallery >}}$0"
		],
		"description": "gallery from photoswipe"
	},
	"photoswipe gallery with all options": {
		"prefix": "ga",
		"body": [
			"{{< gallery ${1:caption-position=\"${2|bottom,center,none|}\" }${3:caption-effect:\"${4|slide,fade,none|}\" }${5:hover-effect=\"${6|zoom,grow,shrink,slideup,slidedown,none|}\" }${7:hover-transition=\"none\" }>}}",
			"\t${8:!figures}",
			"{{< /gallery >}}$0"
		],
		"description": "gallery from photoswipe"
	},
	// Custom shortcode
    "event details": {
        "prefix": "ed",
        "body": "{{< event-details name=\"${1:!event name}\" datetime=\"${2:!event date and time}\" ${3:venue=\"${4:#venue}\" }${5:memberFees=\"${6:#RM10}\" }${7:nonMemberFees=\"${8:#RM20}\" }${9:registrationLink=\"${10:#link}\" }${11:facebookLink=\"${12:#fb event link}\" }>}}$0",
        "description": "shortcode for displaying event's details in a table"
    },
    "is past event": {
        "prefix": "ipe",
        "body": "{{< is-past-event />}}$0",
        "description": "to indicate that the event is a past event"
    },
    "is past event with multiline custom content": {
        "prefix": "ipem",
        "body": [
            "{{< is-past-event >}}",
            "${1:!custom content}",
            "{{< /is-past-event >}}$0"
        ],
        "description": "to indicate that the event is a past event, with custom content"
    },
    "is past event with multiline custom markdown content": {
        "prefix": "ipemd",
        "body": [
            "{{% is-past-event %}}",
            "${1:!custom markdown content}",
            "{{% /is-past-event %}}$0"
        ],
        "description": "to indicate that the event is a past event, with custom markdown content"
    },
    "is future event": {
        "prefix": "ife",
        "body": "{{< is-future-event />}}$0",
        "description": "to indicate that the event is a future event"
    },
    "is future event with multiline custom content": {
        "prefix": "ifem",
        "body": [
            "{{< is-future-event >}}",
            "${1:!custom content}",
            "{{< /is-future-event >}}$0"
        ],
        "description": "to indicate that the event is a future event, with custom content"
    },
    "is future event with multiline custom markdown content": {
        "prefix": "ifemd",
        "body": [
            "{{% is-future-event %}}",
            "${1:!custom markdown content}",
            "{{% /is-future-event %}}$0"
        ],
        "description": "to indicate that the event is a future event, with custom markdown content"
    }
}